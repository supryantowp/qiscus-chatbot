{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "lib": ["es2021", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
